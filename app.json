	"drivers": [
		{		"id": "H60",
				"discovery": "H60",
				"name": {
					"en": "H60"
				},
				"images": {
					"large": "drivers/H60/assets/images/large.jpg",
					"small": "drivers/H60/assets/images/small.jpg"
				},
				"class": "socket",
				"capabilities": [
				    "INDOOR_TEMP",				"ROOM_SET_TEMP",
					"OUTDOOR_TEMP",				"WARM_WATER_TEMP",
					"SUM_ALARM_STATE",			"ADDITIONAL_HEATER_POWER",
					"RADIATOR_FORWARD_TEMP", 	"RADIATOR_RETURN_TEMP",
					"HEAT_CARRIER_RETURN_TEMP",	"HEAT_CARRIER_FORWARD_TEMP",
					"BRINE_IN_TEMP",			"BRINE_OUT_TEMP",
					"COMPRESSOR_STATE",			"SWITCH_VALVE_STATE",
					
					"target_temperature"
								
					
				],
				"capabilitiesOptions": {
						"target_temperature":  {
							"title": {
								"en": "Indoor temperature setting",
								"nl": "Binnentemperatuur instelling",
								"sv": "Inställd innetemp"
							}
						}
						
					
        },
				"pair": [
					{
					"id": "list_devices",
					"template": "list_devices",
					"options": {
						"singular": true
						},
					"navigation": {
						"next": "add_device" 
						}
					},
					{
						"id": "add_device"
					}
				],
	  
				"settings": [
					{
						"type": "group",
						"label": {
							"en": "H60 settings"
						},
						"children": [
							{
								"id": "address",
								"type": "text",
								"value": "0.0.0.0",
								"label": {
									"en": "IP Address"
								}
							},
							
							{	
								"id": "polling",
								"type": "number",
								"value": 5,
								"attr": {
									"min": 5,
									"max": 3600
								},
							"label": {
								"en": "Polling Frequency"
								}
							}
							
							
						
						
					]
				}
			]
		}

    ],  
	
	
    "flow": {
       "triggers": [
			

        {
  				"id": "outdoor_temp_changed",
